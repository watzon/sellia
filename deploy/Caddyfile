# Sellia Caddyfile - Automatic HTTPS with On-Demand TLS
#
# On-demand TLS obtains certificates for each subdomain as they're accessed.
# Caddy verifies with the Sellia server that a tunnel exists before issuing.

{
	on_demand_tls {
		ask http://sellia-server:3000/tunnel/verify
	}
}

# Catch-all HTTPS handler for all subdomains
https:// {
	tls {
		on_demand
	}

	reverse_proxy sellia-server:3000 {
		header_up Host {host}
		header_up X-Real-IP {remote_host}
		flush_interval -1
	}

	log {
		output file /var/log/caddy/sellia.log
		format json
	}
}

# Health check endpoint for load balancers
:8080 {
	respond /health 200
}
